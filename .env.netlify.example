# Netlify环境变量模板
# 复制此文件为 .env.local 并填入实际值

# -----------------------------------------------------------------------------
# 应用程序配置
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL="https://your-app-name.netlify.app"

# -----------------------------------------------------------------------------
# 身份验证 (NextAuth.js)
# -----------------------------------------------------------------------------
NEXTAUTH_SECRET="生成一个随机密钥: openssl rand -base64 32"
NEXTAUTH_URL="https://your-app-name.netlify.app"

# GitHub OAuth (必需)
GITHUB_CLIENT_ID="your_github_client_id"
GITHUB_CLIENT_SECRET="your_github_client_secret"

# Google OAuth (可选)
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"

# -----------------------------------------------------------------------------
# 数据库配置
# -----------------------------------------------------------------------------
POSTGRES_URL="postgresql://username:password@host:port/database?sslmode=require"
IS_DEBUG=false

# -----------------------------------------------------------------------------
# 邮件服务 (RESEND)
# -----------------------------------------------------------------------------
RESEND_API_KEY="resend_api_key_here"
RESEND_FROM="onboarding@resend.dev"

# -----------------------------------------------------------------------------
# 订阅服务 (Stripe)
# -----------------------------------------------------------------------------
STRIPE_API_KEY="sk_test_your_stripe_api_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Stripe产品和价格ID (从Stripe Dashboard获取)
NEXT_PUBLIC_STRIPE_STD_PRODUCT_ID="prod_"
NEXT_PUBLIC_STRIPE_STD_MONTHLY_PRICE_ID="price_"
NEXT_PUBLIC_STRIPE_PRO_PRODUCT_ID="prod_"
NEXT_PUBLIC_STRIPE_PRO_MONTHLY_PRICE_ID="price_"
NEXT_PUBLIC_STRIPE_PRO_YEARLY_PRICE_ID="price_"
NEXT_PUBLIC_STRIPE_BUSINESS_PRODUCT_ID="prod_"
NEXT_PUBLIC_STRIPE_BUSINESS_MONTHLY_PRICE_ID="price_"
NEXT_PUBLIC_STRIPE_BUSINESS_YEARLY_PRICE_ID="price_"

# -----------------------------------------------------------------------------
# 分析和监控 (PostHog)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_POSTHOG_KEY="your_posthog_api_key"
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# -----------------------------------------------------------------------------
# AI服务 (Coze)
# -----------------------------------------------------------------------------
COZE_API_KEY="your_coze_api_key"
COZE_API_URL="https://api.coze.cn"
WORKFLOW_ID="your_workflow_id"

# -----------------------------------------------------------------------------
# 管理配置
# -----------------------------------------------------------------------------
ADMIN_EMAIL="admin@yourdomain.com,root@yourdomain.com"

# -----------------------------------------------------------------------------
# 快速开始说明
# -----------------------------------------------------------------------------
# 1. 复制此文件为 .env.local
# 2. 替换所有占位符值为实际配置
# 3. 在Netlify控制台中设置环境变量
# 4. 确保所有URL都使用你的Netlify域名
# 5. 部署前验证所有配置正确